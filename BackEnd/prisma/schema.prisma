generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String       @id @default(uuid())
  name            String?
  email           String       @unique
  password        String
  profile_picture String?
  userTables      UserTable[]
  Sessions        Session[]
}

model Table {
  id           String       @id @default(uuid())
  titulo       String
  sistema      String
  status       Status
  jogadores    String?
  description  String?
  ambientacao  String?
  dificuldade  String?
  imagemUrl    String?
  createdAt    DateTime     @default(now())
  user_tables  UserTable[]
}

model UserTable {
  id        String   @id @default(uuid())
  userId    String
  tableId   String
  role      String
  isGm      Boolean  @default(false) // ðŸ‘ˆ Indica se esse usuÃ¡rio Ã© mestre na mesa
  user      User     @relation(fields: [userId], references: [id])
  table     Table    @relation(fields: [tableId], references: [id])
}


enum dificuldade {
  Iniciante
  IntermediÃ¡rio
  AvanÃ§ado
}

enum Status {
  ATIVA
  RECRUTANDO
  PAUSADA
}


model Session {
  id           String   @id @default(uuid())
  userId       String
  refreshToken String   @unique
  valid        Boolean  @default(true)
  createdAt    DateTime @default(now())
  expiresAt    DateTime
  user         User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

